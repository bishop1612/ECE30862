		N = n;
		// TODO Auto-generated constructor stub
	}
	
	public int[][] formmatrix() {
		Random randomGenerator = new Random();
		int [][] formmatrix = new int[N][N];
		int i,j = 0;
		for(i = 0;i < N;i++){
			for(j = 0;j < N;j++){
				formmatrix[i][j] = randomGenerator.nextInt(100);
			}
		}
		return formmatrix;
		
		// TODO Auto-generated constructor stub
	}
	

